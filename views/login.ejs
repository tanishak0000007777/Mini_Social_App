<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
  <style>
    body { font-family: 'Inter', sans-serif; }
  </style>
</head>
<body class="bg-zinc-900 text-white min-h-screen flex items-center justify-center px-4">
  <div class="w-full max-w-md p-8 bg-zinc-800 rounded-xl shadow-xl">
    <h3 class="text-3xl font-semibold mb-6 text-center">Login Account</h3>

    <% if (typeof error !== 'undefined') { %>
      <div class="mb-4 p-3 bg-red-600 text-sm rounded text-center">
        <%= error %>
      </div>
    <% } %>

    <form action="/login" method="post" class="space-y-4">
      <input
        type="email"
        name="email"
        placeholder="Email"
        required
        class="w-full px-4 py-2.5 rounded-md bg-zinc-900 border border-zinc-700 focus:border-blue-500 focus:ring focus:ring-blue-500/30 outline-none transition"
      />

      <input
        type="password"
        name="password"
        placeholder="Password"
        required
        class="w-full px-4 py-2.5 rounded-md bg-zinc-900 border border-zinc-700 focus:border-blue-500 focus:ring focus:ring-blue-500/30 outline-none transition"
      />

      <input
        type="submit"
        value="Login"
        class="w-full py-2.5 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-md shadow-md hover:shadow-lg transition"
      />
    </form>

    <!-- Register button -->
    <div class="mt-6 text-center">
      <p class="text-sm text-zinc-400 mb-2">Donâ€™t have an account?</p>
      <a href="/" class="inline-block px-5 py-2 bg-emerald-600 hover:bg-emerald-700 text-white font-medium rounded-md shadow hover:shadow-lg transition">
        Create Account
      </a>
    </div>
  </div>
</body>
</html>
